# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Local Model Configuration
LOCAL_MODEL_NAME=microsoft/DialoGPT-medium
USE_GPU=true
GPU_DEVICE_ID=0

# Vector Database Configuration
CHROMA_PERSIST_DIRECTORY=./data/chroma_db
CHROMA_COLLECTION_NAME=ai_demo_collection

# OpenTelemetry Configuration
OTEL_SERVICE_NAME=ai-observability-demo
OTEL_SERVICE_VERSION=1.0.0
OTEL_RESOURCE_ATTRIBUTES=service.name=ai-observability-demo,service.version=1.0.0,deployment.environment=demo

# OTLP Exporter Configuration (for Grafana Cloud)
OTEL_EXPORTER_OTLP_ENDPOINT=https://otlp-gateway-prod-us-central-0.grafana.net/otlp
OTEL_EXPORTER_OTLP_HEADERS=Authorization=Basic your_base64_encoded_credentials_here

# Prometheus Metrics
PROMETHEUS_PORT=8000
METRICS_ENABLED=true

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8080
DEBUG_MODE=false
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=sqlite:///./data/app.db

# Demo Configuration
DEMO_USER_ID=demo_user
DEMO_SESSION_ID=demo_session

# Grafana Alloy Configuration
ALLOY_CONFIG_PATH=./config/config.alloy
ALLOY_HTTP_LISTEN_PORT=12345
ALLOY_GRPC_LISTEN_PORT=12346